{
  "name": "heiwa",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "npx tailwindcss -i ./templates/statics/styles.css -o ./templates/statics/dist/styles.css",
    "watch": "npx tailwindcss -i ./templates/statics/styles.css -o ./templates/statics/dist/styles.css --watch",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frontend": "npm run watch",
    "dev:backend": "cargo watch -x run"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "concurrently": "^8.2.0",
    "tailwindcss": "^3.3.3"
  }
}
